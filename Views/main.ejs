
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Autenticación de Usuario</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #1a1a1a;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .auth-container {
            background-color: #2a2a2a;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
            width: 100%;
            max-width: 400px;
        }
        h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 1.5rem;
        }
        form {
            display: flex;
            flex-direction: column;
        }
        input {
            margin-bottom: 1rem;
            padding: 0.75rem;
            border: none;
            border-radius: 5px;
            background-color: #3a3a3a;
            color: #ffffff;
            transition: box-shadow 0.3s ease;
        }
        input:focus {
            outline: none;
            box-shadow: 0 0 0 2px #00ffff;
        }
        button {
            padding: 0.75rem;
            border: none;
            border-radius: 5px;
            background-color: #00ff00;
            color: #000000;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        button:hover {
            background-color: #00ffff;
            box-shadow: 0 0 10px #00ffff;
        }
        .neon-text {
            color: #00ffff;
            text-shadow: 0 0 5px #00ffff;
        }
        .toggle-form {
            text-align: center;
            margin-top: 1rem;
        }
        .toggle-form a {
            color: #00ffff;
            text-decoration: none;
            transition: text-shadow 0.3s ease;
        }
        .toggle-form a:hover {
            text-shadow: 0 0 5px #00ffff;
        }
        #register-form {
            display: none;
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <% if (typeof username !== 'undefined') { %>
            <div>
                <h2 id="form-title">Welcome <span class="neon-text"><%= username %>!</span></h2>
                <p class="">This is the Adminitration Panel</p>
                <button id="close-session">Log Out</button>
            </div>
        <% } %>

        <% if (typeof username === 'undefined') { %>
            <h2 id="form-title">Sign <span class="neon-text">In</span></h2>
            <form id="login-form">

                <input type="text" id="login-username" placeholder="Username" required>
                <input type="password" id="login-password" placeholder="Password" required>
                <button type="submit">Log In</button>
                <span id="login-span"></span>
            </form>
            <form id="register-form">
                <input type="text" id="register-username" placeholder="Username" required>
                <input type="password" id="register-password" placeholder="Password" required>
                <input type="password" id="register-confirm-password" placeholder="Confirm Password" required>
                <button type="submit">Sign Up</button>
                <span id="login-span"></span>
            </form>
            <div class="toggle-form">
                <a href="#" id="toggle-link">Don't have an account? Sign up</a>
            </div>
        <% } %>
    </div>

    <script>
        const loginForm = document.getElementById('login-form');
        const registerForm = document.getElementById('register-form');
        const toggleLink = document.getElementById('toggle-link');
        const formTitle = document.getElementById('form-title');
        const loginSpan = document.getElementById('login-span');
        const logoutButton = document.getElementById('close-session');

        toggleLink.addEventListener('click', function(e) {
            e.preventDefault();
            if (loginForm.style.display === 'none') {
                loginForm.style.display = 'flex';
                registerForm.style.display = 'none';
                toggleLink.textContent = `Don't have an account? Sign up`;
                formTitle.innerHTML = 'Iniciar <span class="neon-text">Sesión</span>';
            } else {
                loginForm.style.display = 'none';
                registerForm.style.display = 'flex';
                toggleLink.textContent = 'Already have an account? Sign in';
                formTitle.innerHTML = 'Create <span class="neon-text">Account</span>';
            }
            // LIMPIAR LOS EVENTLISTENERS
            loginForm.reset();
        });

        loginForm?.addEventListener('submit', function(e) {
            e.preventDefault();
            const username = document.getElementById('login-username').value;
            const password = document.getElementById('login-password').value;
            console.log('Intento de inicio de sesión con:', username, password);
            // Aquí puedes agregar tu lógica de autenticación
            fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username, password })
            })
            .then(res => {
                if (res.ok) {
                    loginSpan.innerHTML = 'Session starting ...'
                    loginSpan.style.color = 'green'
                    setTimeout(() => {
                        window.location.href = '/protected'
                    }, 2000)
                } else {
                    loginSpan.innerHTML = 'Incorrect username or password'
                    loginSpan.style.color = 'red'
                }
            })


        });

        registerForm?.addEventListener('submit', function(e) {
            e.preventDefault();
            const username = document.getElementById('register-username').value;
            const password = document.getElementById('register-password').value;
            const confirmPassword = document.getElementById('register-confirm-password').value;
            if (password !== confirmPassword) {
                alert('Passwords do not match');
                return;
            }
            console.log('Intento de registro con:', username, password);
            // Aquí puedes agregar tu lógica de registro

            fetch('/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username, password })
            })
            .then(res => {
                if (res.ok) {
                    loginSpan.innerHTML = 'Creating user ...'
                    loginSpan.style.color = 'green'
                    setTimeout(() => {
                        window.location.href = '/protected'
                    }, 2000)
                } else {
                    loginSpan.innerHTML = 'Incorrect username or password'
                    loginSpan.style.color = 'red'
                }
            })
            

        });

        logoutButton?.addEventListener('click', function(e) {
            e.preventDefault();
            fetch('/logout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(res => {
                    window.location.href = '/'
                })
            })
    </script>
</body>
</html>